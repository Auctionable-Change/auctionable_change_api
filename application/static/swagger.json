{
  "openapi": "3.0.0",
  "info": {
    "description": "Backend API for the Auctionable Change mobile application.
                    Created by Turing School of Software and Design students
                    Stephanie Friend, Kevin McGrevey, Andrew Reid",
    "version": "1.0.0",
    "title": "Auctionable Change",
    "authors": "",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
   {
     "url": "/"
   }
 ],
 "tags": [
   {
     "name": "Items",
     "description": "API for creating and viewing items for auction"
   },
   {
     "name": "Bids",
     "description": "API for creating and viewing bids for items"
   }
 ],
 "paths": {
    "/items": {
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "Returns all items",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/item"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Items"
        ],
        "summary": "Creates an item for auction",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/item"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/components/schemas/item"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Items"
        ],
        "summary": "Deletes an item",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/item"
            }
          }
        }
      }
    },
    "/items/{id}": {
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "Returns specific items by ID",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/item"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Items"
        ],
        "summary": "Updates a specific item by ID",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/item"
            }
          }
        }
      }
    },
    "/bids": {
      "get": {
        "tags": [
          "Bids"
        ],
        "summary": "Returns all bids",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/item"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Bids"
        ],
        "summary": "Creates an bid for an item",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/bid"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/components/schemas/bid"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Bids"
        ],
        "summary": "Deletes an bid",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/bid"
            }
          }
        }
      }
    },
    "/bids/{id}": {
      "get": {
        "tags": [
          "Bids"
        ],
        "summary": "Returns specific bids by ID",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/bid"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Bids"
        ],
        "summary": "Updates a specific bid by ID",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/bid"
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "item": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "integer"
          },
          "title": {
            "type": "string",
            "format": "string"
          },
          "description": {
            "type": "string",
            "format": "string"
          },
          "price": {
            "type": "float",
            "format": "float"
          },
          "donor": {
            "type": "string",
            "format": "string"
          },
          "status": {
            "type": "string",
            "format": "string"
          },
          "category": {
            "type": "string",
            "format": "string"
          },
          "charity": {
            "type": "string",
            "format": "string"
          },
          "charity_url": {
            "type": "string",
            "format": "string"
          },
          "charity_score": {
            "type": "integer",
            "format": "integer"
          },
          "image": {
            "type": "image",
            "format": "image"
          }
        }
      },
      "bid": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "integer"
          },
          "item_id": {
            "type": "integer",
            "format": "integer"
          },
          "bidder_name": {
            "type": "string",
            "format": "string"
          },
          "bidder_email": {
            "type": "string",
            "format": "string"
          },
          "amount": {
            "type": "float",
            "format": "float"
          },
          "street_address": {
            "type": "string",
            "format": "string"
          },
          "city": {
            "type": "string",
            "format": "string"
          },
          "state": {
            "type": "string",
            "format": "string"
          },
          "zip_code": {
            "type": "string",
            "format": "string"
          },
          "receipt": {
            "type": "string",
            "format": "string"
          }
        }
      }
    }
  }
}
